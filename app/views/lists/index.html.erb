<div class="mb-4 d-flex p-4 custom-banner" style="background-color: #253D56">
  <div class="container d-flex justify-content-between flex-column">
    <div>
      <%= link_to root_path, class: "navbar-brand", class: "d-flex align-items-center banner-link" do %>
        <i class="fa-solid fa-clapperboard"></i>
        <p class="m-0">Home</p>
      <% end %>
    </div>
    <div class="banner-body">
      <h1>Movies list</h1>
      <p>Add movies to this list</p>
      <%= link_to 'New list', new_list_path, class: "btn btn-home" %>
    </div>
  </div>
</div>

<div class="container body">
  <section class="list-body">
    <% @lists.each do |list| %>
      <div class="card mb-3 d-flex justify-content-between flex-row align-items-center">
        <%= link_to list_path(list), class: "flex-grow-1" do %>
        <div class="card-body d-flex justify-content-between">
          <%= list.name.capitalize %>
        </div>
        <% end %>
        <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash-can ms-3 me-3"></i>
        <% end %>
      </div>
    <% end %>
  </section>
</div>
