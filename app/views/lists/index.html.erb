<div class="lists-header d-flex justify-content-between align-items-center mb-3">
  <h1>Movies lists</h1>
  <%= link_to 'New list', new_list_path %>
</div>

<% @lists.each do |list| %>
  <div class="card mb-3">
    <%= link_to list_path(list) do %>
      <div class="card-body">
        <%= list.name.capitalize %>
      </div>
    <% end %>
  </div>
<% end %>
