<div class="lists-header d-flex justify-content-between align-items-center mb-3">
  <h1>Movies lists</h1>
</div>

<section class="list-body">
  <% @lists.each do |list| %>
    <div class="card mb-3 d-flex justify-content-between flex-row align-items-center">
      <%= link_to list_path(list), class: "flex-grow-1" do %>
      <div class="card-body d-flex justify-content-between">
        <%= list.name.capitalize %>
      </div>
      <% end %>
      <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
        <i class="fa-solid fa-trash-can ms-3 me-3"></i>
      <% end %>
    </div>
  <% end %>
</section>
