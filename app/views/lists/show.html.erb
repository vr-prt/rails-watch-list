<div class="lists-header d-flex justify-content-between align-items-center mb-3">
  <h1><%= @list.name.capitalize %> movies list</h1>
  <%= link_to 'New bookmark', new_list_bookmark_path(@list), class: "btn btn-info" %>
</div>

<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @bookmarks.each do |bookmark| %>
    <div class="col movie">
      <div class="card">
        <div style="background-image: url('<%= bookmark.movie.poster_url %>')" class="movie-cover"></div>
        <div class="card-body">
          <div class="card-body-header d-flex justify-content-between">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p><%= bookmark.movie.rating %> <i class="fa-solid fa-star"></i></p>
          </div>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></p>
        </div>
      </div>
    </div>
  <% end %>

</div>
